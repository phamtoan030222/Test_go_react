server {
  listen 80;
  server_name _;

  root /usr/share/nginx/html;
  index index.html;

  # Cache mạnh cho assets có hash tên file
  location ~* \.(?:js|css|woff2?|ttf|png|jpg|jpeg|svg)$ {
    try_files $uri =404;
    add_header Cache-Control "public, max-age=31536000, immutable";
  }

  # Không cache index.html để có thể rollout nhanh
  location = /index.html {
    add_header Cache-Control "no-cache";
  }

  # SPA fallback
  location / {
    try_files $uri /index.html;
  }
}
